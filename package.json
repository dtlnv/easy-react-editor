{
  "name": "easy-react-editor",
  "version": "1.1.0",
  "description": "Super simple react editor",
  "author": "dtlnv",
  "keywords": [
    "react",
    "editor",
    "react editor",
    "simple editor",
    "rich-text",
    "wysiwyg",
    "formatting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dtlnv/easy-react-editor"
  },
  "private": false,
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "demo-start": "react-scripts start",
    "demo-build": "react-scripts build",
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs && yarn build:css",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:css": "babel src/lib/Editor/styles --out-dir dist/cjs/Editor/styles --copy-files && babel src/lib/Editor/styles --out-dir dist/esm/Editor/styles --copy-files",
    "test": "react-scripts test --no-cache --watchAll=false --coverage --collectCoverageFrom=src/lib/**/*.{js,jsx,ts,tsx}",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@types/node": "^16.18.39",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.11",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-syntax-flow": "^7.14.5",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/preset-env": "^7.22.10",
    "@testing-library/dom": "7.21.4",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.4",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "nth-check": "^2.1.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
